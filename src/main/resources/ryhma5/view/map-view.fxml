<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="stackPane" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ryhma5.view.MapController">
   <children>
      <VBox fx:id="vbox" prefHeight="150.0" prefWidth="100.0">
         <children>
            <HBox alignment="TOP_CENTER" spacing="20.0" VBox.vgrow="NEVER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter coordinates: " />
                  <TextField fx:id="coordinateInput" alignment="CENTER" minWidth="180.0" onAction="#setCoordinates" promptText="60.192059, 24.945831" />
                  <Button fx:id="confirmButton" minHeight="40.0" minWidth="120.0" mnemonicParsing="false" onAction="#setCoordinates" text="Confirm" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <AnchorPane fx:id="mapPane" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</StackPane>
